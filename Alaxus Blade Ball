local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Alaxus Hub Key System - " .. Fluent.Version,
    SubTitle = "By Prymoric",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.LeftControl
})

_G.Key = "ksjenndjssj2837"
_G.KeyInput = "string"

function MakeScriptHub()
    Fluent:Destroy()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/Prymoric/Alaxus-Refinement-/main/Prymoric%20Alaxus%20Hub",true))()
 
end

function CorrectKeyNotification()
    Fluent:Notify({
        Title = "Correct Key!",
        Content = "You have entered the correct key!",
        SubContent = "Enjoy the script!", -- Optional
        Duration = 5 -- Set to nil to make the notification not  

    })
end

function IncorrectKeyNotification()
    Fluent:Notify({
        Title = "Incorrect Key!",
        Content = "You have entered the Incorrect key!",
        SubContent = "Wrong key!", -- Optional
        Duration = 3 -- Set to nil to make the notification not  

    })
end

function DiscordNotification()
    Fluent:Notify({
        Title = "Link has been Copied!!",
        Content = "Paste the link in google",
        SubContent = "Copied!", -- Optional
        Duration = 5 -- Set to nil to make the notification not  

    })
end

local Tabs = {
    Main = Window:AddTab({ Title = "Key", Icon = "" }),
}

local Input = Tabs.Main:AddInput("Input", {
        Title = "Enter Key",
        Default = "",
        Placeholder = "Enter Key",
        Numeric = false, -- Only allows numbers
        Finished = false, -- Only calls callback when you press enter
        Callback = function(Value)
            _G.KeyInput = Value
            MakeScriptHub()
    end
})

Tabs.Main:AddButton({
        Title = "Check key",
        Description = "Very important button",
        Callback = function()
                if _G.KeyInput == _G.Key then
                MakeScriptHub()
                CorrectKeyNotification()
                else
                    IncorrectKeyNotification()
                end
    end
})

Tabs.Main:AddButton({
        Title = "Get Key",
        Description = "Paste the link in google",
        Callback = function()
            setclipboard("https://link-target.net/903414/blade-ball-key5")
            DiscordNotification()
            
    end
})
