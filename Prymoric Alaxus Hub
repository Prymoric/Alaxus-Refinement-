local function createFluentToggle(tab, title, default, callback)
    local toggle = tab:AddToggle(title, {Title = title, Default = default})
    toggle:OnChanged(callback)
    return toggle
end

local function handleSpawnLogic(stayspawnshit, title)
    while stayspawnshit do 
        wait()
        if stayspawnshit then
            character.Parent = workspace.Alive
            if localPlayer.PlayerGui.announcer.TextBox.Text == "Starting Game" or localPlayer.PlayerGui.announcer.TextBox.Text == "Starting Team Game" then
                character.Humanoid.Health = 0
                localPlayer.PlayerGui.announcer.TextBox.Text = "e"
                if title == "Safe Respawn Teleport" then
                    task.wait(5)
                    character.HumanoidRootPart.CFrame = CFrame.new(121231212313,121231213,12123123213)
                end
            end
        end
    end
end

-- 1. Automatic Parry Mode Toggle
createFluentToggle(Tabs.Main, "Automatic Parry Mode", false, function(value)
    if value then
        startAutoParry() -- Assuming this function is defined elsewhere
    else
        stopAutoParry() -- Assuming this function is defined elsewhere
    end
end)

-- 2. Automatic Raging Deflection Mode Toggle
createFluentToggle(Tabs.Main, "Automatic Raging Deflection Mode", false, function(value)
    UseRage = value -- Assuming UseRage is defined globally or used in another function
end)

-- 3. Partial Legit Spawn Mode Toggle
createFluentToggle(Tabs.Main, "Partial Legit Spawn Mode", false, function(value)
    handleSpawnLogic(value, "Partial Legit Spawn Mode")
end)

-- 4. Safe Respawn Teleport Toggle
createFluentToggle(Tabs.Main, "Safe Respawn Teleport", false, function(value)
    handleSpawnLogic(value, "Safe Respawn Teleport")
end)

